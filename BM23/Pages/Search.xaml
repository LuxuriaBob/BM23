<!--<?xml version="1.0" encoding="utf-8" ?>-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BM23.Pages.Search"
             Title="search"
             BackgroundColor="Blue"
             >
    <AbsoluteLayout>
        <Entry
            Placeholder="Search a player or a team"
            x:Name="Search_Entry"
            PropertyChanged="Search_Entry_PropertyChanged"
            AbsoluteLayout.LayoutBounds="20,20,500,30"
            FontSize = "20"
            TextColor="White"
         />
        <Button
            x:Name="SearchButton"
            AbsoluteLayout.LayoutBounds="550,20,80,30"
            Clicked="SearchButton_Clicked"
            Text="Search"
            >
        </Button>
        <!--Grid
            RowDefinitions="50,50,50,50,50,50,50,50,50"
            ColumnDefinitions="100"
            AbsoluteLayout.LayoutBounds="20,70,50,50"
            >
        </Grid-->
        <Label
            x:Name="label1"
            AbsoluteLayout.LayoutBounds="400,400,400,200"
            >
        </Label>
        <Label
            x:Name="label2"
            AbsoluteLayout.LayoutBounds="400,600,400,200"
            >
        </Label>


    </AbsoluteLayout>
</ContentPage>